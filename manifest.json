{
  "manifest_version": 2,
  "name": "Goplum",
  "description": "Goplum takes music from Google Play Music and saves it.",
  "version": "1.0",
  "minimum_chrome_version": "10.0",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "96": "img/icon96.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "96": "img/icon96.png"
    },
    "default_title": "Goplum",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "tabs", "activeTab", "webRequest", "<all_urls>", "storage"
  ],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
